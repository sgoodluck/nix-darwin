{
    "global": {
        "check_for_updates_on_startup": true,
        "show_in_menu_bar": true,
        "show_profile_name_in_menu_bar": false,
        "unsafe_ui": false
    },
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "Right Option Key → Hyper Key (⌃⌥⇧⌘)",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "right_option",
                                    "modifiers": {
                                        "optional": ["any"]
                                    }
                                },
                                "to": [
                                    {
                                        "key_code": "left_shift",
                                        "modifiers": [
                                            "left_command",
                                            "left_control",
                                            "left_option"
                                        ]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "System Control Commands",
                        "manipulators": [
                            {
                                "description": "Cmd + Escape → Lock Screen",
                                "from": {
                                    "key_code": "escape",
                                    "modifiers": {
                                        "mandatory": ["command"],
                                        "optional": []
                                    }
                                },
                                "to": [
                                    {
                                        "shell_command": "pmset displaysleepnow"
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "description": "Hyper + L → Logout",
                                "from": {
                                    "key_code": "l",
                                    "modifiers": {
                                        "mandatory": [
                                            "left_shift",
                                            "left_command",
                                            "left_control",
                                            "left_option"
                                        ],
                                        "optional": []
                                    }
                                },
                                "to": [
                                    {
                                        "shell_command": "osascript -e 'tell app \"System Events\" to log out'"
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "description": "Hyper + P → Power Down",
                                "from": {
                                    "key_code": "p",
                                    "modifiers": {
                                        "mandatory": [
                                            "left_shift",
                                            "left_command",
                                            "left_control",
                                            "left_option"
                                        ],
                                        "optional": []
                                    }
                                },
                                "to": [
                                    {
                                        "shell_command": "osascript -e 'tell app \"System Events\" to shut down'"
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "description": "Hyper + B → Reboot",
                                "from": {
                                    "key_code": "b",
                                    "modifiers": {
                                        "mandatory": [
                                            "left_shift",
                                            "left_command",
                                            "left_control",
                                            "left_option"
                                        ],
                                        "optional": []
                                    }
                                },
                                "to": [
                                    {
                                        "shell_command": "osascript -e 'tell app \"System Events\" to restart'"
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "description": "Hyper + S → Sleep",
                                "from": {
                                    "key_code": "s",
                                    "modifiers": {
                                        "mandatory": [
                                            "left_shift",
                                            "left_command",
                                            "left_control",
                                            "left_option"
                                        ],
                                        "optional": []
                                    }
                                },
                                "to": [
                                    {
                                        "shell_command": "osascript -e 'tell app \"System Events\" to sleep'"
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Application Launchers (Not in Aerospace)",
                        "manipulators": [
                            {
                                "description": "Cmd + Shift + Return → Firefox",
                                "from": {
                                    "key_code": "return_or_enter",
                                    "modifiers": {
                                        "mandatory": ["command", "shift"],
                                        "optional": []
                                    }
                                },
                                "to": [
                                    {
                                        "shell_command": "open -na /Applications/Firefox.app"
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "description": "Cmd + Ctrl + Return → VS Code",
                                "from": {
                                    "key_code": "return_or_enter",
                                    "modifiers": {
                                        "mandatory": ["command", "control"],
                                        "optional": []
                                    }
                                },
                                "to": [
                                    {
                                        "shell_command": "open -na '/Applications/Visual Studio Code.app'"
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "description": "Hyper + N → Open Finder in Current Directory",
                                "from": {
                                    "key_code": "n",
                                    "modifiers": {
                                        "mandatory": [
                                            "left_shift",
                                            "left_command",
                                            "left_control",
                                            "left_option"
                                        ],
                                        "optional": []
                                    }
                                },
                                "to": [
                                    {
                                        "shell_command": "open ."
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Hyper Key Utilities",
                        "manipulators": [
                            {
                                "description": "Hyper + C → System Settings",
                                "from": {
                                    "key_code": "c",
                                    "modifiers": {
                                        "mandatory": [
                                            "left_shift",
                                            "left_command",
                                            "left_control",
                                            "left_option"
                                        ],
                                        "optional": []
                                    }
                                },
                                "to": [
                                    {
                                        "shell_command": "open -b com.apple.systempreferences"
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "description": "Hyper + Y → Restart Aerospace",
                                "from": {
                                    "key_code": "y",
                                    "modifiers": {
                                        "mandatory": [
                                            "left_shift",
                                            "left_command",
                                            "left_control",
                                            "left_option"
                                        ],
                                        "optional": []
                                    }
                                },
                                "to": [
                                    {
                                        "shell_command": "aerospace reload-config"
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "name": "Default profile",
            "selected": true,
            "virtual_hid_keyboard": {
                "country_code": 0,
                "keyboard_type_v2": "ansi"
            }
        }
    ]
}