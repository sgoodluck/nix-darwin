// Zellij configuration
// https://zellij.dev/documentation/configuration.html

// Theme
themes {
    modus-vivendi-tinted {
        // Background colors
        bg "#1d2235"  // Main background
        fg "#ffffff"  // Main foreground
        
        // ANSI colors based on Modus Vivendi Tinted
        black "#1d2235"
        red "#ff5f59"
        green "#44bc44"
        yellow "#d0bc00"
        blue "#2fafff"
        magenta "#feacd0"
        cyan "#00d3d0"
        white "#989898"
        
        // Bright variants
        orange "#ef8b50"
        
        // UI elements
        gray "#4f5666"      // Borders and inactive elements
        silver "#a8a8a8"    // Secondary text
        pink "#feacd0"      // Highlights
        brown "#b06240"     // Additional accent
        
        // Status bar
        black "#1d2235"
        white "#ffffff"
    }
}

theme "modus-vivendi-tinted"

// Keybindings
keybinds {
    normal {
        // Navigation
        bind "Alt h" { MoveFocus "Left"; }
        bind "Alt l" { MoveFocus "Right"; }
        bind "Alt j" { MoveFocus "Down"; }
        bind "Alt k" { MoveFocus "Up"; }
        
        // Pane management
        bind "Alt n" { NewPane; }
        bind "Alt x" { CloseFocus; }
        bind "Alt f" { ToggleFocusFullscreen; }
        bind "Alt s" { NewPane "Down"; }
        bind "Alt v" { NewPane "Right"; }
        
        // Tab management
        bind "Alt t" { NewTab; }
        bind "Alt 1" { GoToTab 1; }
        bind "Alt 2" { GoToTab 2; }
        bind "Alt 3" { GoToTab 3; }
        bind "Alt 4" { GoToTab 4; }
        bind "Alt 5" { GoToTab 5; }
        bind "Alt 6" { GoToTab 6; }
        bind "Alt 7" { GoToTab 7; }
        bind "Alt 8" { GoToTab 8; }
        bind "Alt 9" { GoToTab 9; }
        
        // Session management
        bind "Ctrl o" { SwitchToMode "Session"; }
    }
}

// UI Configuration
pane_frames false
// default_layout "compact"

// Copy command
copy_command "pbcopy"

// Scrollback
scroll_buffer_size 10000

// Mouse mode
mouse_mode true

// Simplified UI - set to false to show help
simplified_ui false

// Hide session name
hide_session_name false